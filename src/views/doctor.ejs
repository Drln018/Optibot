    <!-- Sección de doctores -->
    <div class="container mt-5 c">
        <h2 class="text-center mb-5">Nuestros Oftalmólogos</h2>
        <div class="row row-cols-1 row-cols-md-3 g-4">
            <!-- Tarjeta Doctor 1 -->
            <div class="col">
                <div class="card">
                    <img src="img/oftalmologo1.jpg" class="card-img-top" alt="Dr. Juan Pérez">
